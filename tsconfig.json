{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",                // matches moduleResolution
    "moduleResolution": "bundler",     // your working project uses this
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "paths": { "@/*": ["./src/*"] },
    "typeRoots": [
      "./types",                      // ← pick up our .d.ts below
      "./node_modules/@types"
    ]
  },
  "include": [
    "next-env.d.ts",
    "types/**/*.d.ts",                 // ← your custom declarations
    "src/**/*.{ts,tsx}",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
